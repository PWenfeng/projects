/* pages/edit2/edit2.wxss */
.left{
  float: left;
}
.right{
  float: right;
  height: 60rpx;
  line-height: 60rpx;
  margin: 10rpx 0;
  padding: 0 20rpx;
  background-color: #1890ff;
  border-radius: 10rpx;
  color: white;
}
.publish{
  width: 648rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
}

.uploadImg{
  height: 360rpx;
  display: flex;
  justify-content: center;
  background-color: #f0f0f0;
}
.addImg{
  color: #262626;
  font-weight: 400;
  background-color: #f5f5f5;
}

/* 复选框样式 */
.section_gap{
  width: 648rpx;
  margin: 0 auto;
}
.group{
  display: flex;
  flex-wrap: wrap;
}
.label-1{
  margin: 20rpx ;
}
.label-1__text{
  display: inline-block;
  vertical-align: middle;
}

.label-1__icon {
  position: relative;
  margin-right: 10px;
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  background: #fcfff4;
  border-radius: 4rpx;
}

.label-1__icon-checked {
  position: absolute;
  left: 3px;
  width: 18px;
  height: 18px;
  background: #1aad19;
  border-radius: 4rpx;
}
.tags{
  margin: 20rpx;
  font-weight: 600;
}

