.orderContent{
  margin-top: 50rpx;
  margin-bottom: 100rpx;
}
.address{
  height: 180rpx;
  border: 1px solid silver;
  border-radius: 30rpx;
  background: white;
  display: flex;
}
.address>view{
  height: 100%;

}
.address .content{
  font-size: 30rpx;
}
.address>view:nth-child(1){
  flex: 1;
  padding: 50rpx;
}
.address>view:nth-child(2){
  flex: 8;
}
.address>view:nth-child(3){
  flex: 1;
  padding: 50rpx;
}
.orderItems{
  margin-top: 10rpx;
  background-color: white;
  height: 300rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
}
.orderItems .iteminfo{
  flex:8;
  display: flex;
}
.orderItems .iteminfo>view:nth-child(1){
   flex: 4;
}
.orderItems .iteminfo image{
  width: 100%;
  height: 100%;
}
.orderItems .iteminfo>view:nth-child(2){
  flex: 6;
  padding-top: 50rpx;
}
.orderItems .itemMoney{
  flex:2;
  text-align: right;
  padding-right: 30rpx;
  color: red;
}