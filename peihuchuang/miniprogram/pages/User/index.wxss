
.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  overflow: hidden;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   

}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}
.png{
  border-radius: 50%;
}
.text-xl{
  margin-top:50rpx; 
  font-size: 36rpx;
}
.waterTest{
  background-color: white;
  width: 100vw;
  height: 50rpx;
  z-index: 999;
  position: relative;
  top: -2rpx;
}
.content{
  height: 1000rpx;
  overflow: hidden;
  background-color: #DCDCDC;
}

.items{
  position: relative;
  top:50rpx;
  width: 90vw;
  margin: 0 auto;
  border-radius: 30rpx;
  border: 1px solid #F5F5F5;
  overflow: hidden;
  background-color: white;
}

.item{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #F5F5F5;
  position: relative;
  overflow: hidden;
  
}
.item .title{
  position: absolute;
  top: 0;
  left: 80rpx;
  color:	#778899;
}
.item van-icon{
  position: absolute;
  right: 50rpx;
  font-size: 30rpx;
  top: 35rpx;
}
image{
  position: relative;
  left: 30rpx;
  width: 30rpx;
  height: 30rpx;
}